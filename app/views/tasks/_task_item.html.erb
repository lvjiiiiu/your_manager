<% tasks.each do |task|%>
  <div class="draggable-item">
    <%= link_to task_path(task, user_id: params[:user_id]), method: :get, remote: true, class: "text-decoration-none"  do %>
    <div class="item" id="task_item_<%= task.id %>" value="<%= task.id %>">

      <div class="task_title"><%= task.task_title %></div>
      <div class="comment_info">
        <div class="date_and_status">
          <span class="task_date"><%= "#{task.start_date}" + "ãƒ¼" + "#{task.end_date}" %></span>
          <span class="task_status"><%= task.task_status%></span>
        </div>
        <div class="task_comment_count">
          <i class="far fa-comment-alt"></i>
          <span id=item_task_<%= task.id %>><%= task.comments.count %></span>
        </div>
      </div>

    </div>
    <% end %>
  </div>
<% end %>