<% tasks.each do |task|%>
  <% if task.task_matrix = "重要で緊急でない" %>
    <%= link_to task_path(task, user_id: params[:user_id]), method: :get, remote: true do %>
    <div class="item" id="draggable" draggable="true">
      <div class="task_title"><%= task.task_title %></div>
      <span class="task_date"><%= "#{task.start_date}" + "ー" + "#{task.end_date}" %></span>
      <span class="task_status"><%= task.task_status%></span>
    </div>
    <% end %>
  <% end %>
<% end %>