
<div class="container-fluid">
  <div class="row">
    <!--------サイドバー-------->
    <div class="side-bar col-3">
      <%= render 'layouts/sidebar' %>
    </div>
    <!--------タスクメイン------------------------->
    <div class="col-9">
      <div class="container">
        <div class="row task-matrix">
          <!-----------重要 x 緊急でない----------->
          <div class="matrix-box col-6">
            <div class="matrix-title">
              <p>重要 x 緊急でない</p>
            </div>
            <div class="new-task-btn">
              <%= link_to "タスクを新規追加 ＋ ", new_task_path(matrix: "1"), remote: true, class: "btn btn-sm, btn-primary" %>
              <!--モーダル-->
              <div id="task-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
              <!---->
            </div>
            <div class="item-container">
              <%= render "task_item", tasks: @tasks %>
            </div>
          </div>
          <!-----------重要 x 緊急----------------->
          <div class="matrix-box col-6">
            <div class="matrix-title">
              <p>重要 x 緊急</p>
            </div>
            <div class="new-task-btn">
              <%= link_to "タスクを新規追加 ＋ ", new_task_path(matrix: "2"), remote: true, class: "btn btn-sm, btn-primary" %>
              <!--モーダル-->
              <div id="task-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
              <!---->
              <div class="item-container2">
                 <% @tasks.each do |task|%>
                <% if task.task_matrix = "重要かつ緊急"%>
                <div class="item" id="draggable" draggable="true">
                  <div class="task_title"><%= task.task_title %></div>
                  <span class="task_date"><%= "#{task.start_date}" + "ー" + "#{task.end_date}" %></span>
                  <span class="task_status"><%= task.task_status%></span>
                </div>
                <% end %>
              <% end %>
              </div>
            </div>
          </div>
          <!---------重要でない x 緊急でない------->
          <div class="matrix-box col-6">
            <div class="matrix-title">
              <p>重要でない x 緊急でない</p>
            </div>
            <div class="new-task-btn">
              <%= link_to "タスクを新規追加 ＋ ", new_task_path(matrix: "3"), remote: true, class: "btn btn-sm, btn-primary" %>
              <!--モーダル-->
              <div id="task-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
              <!---->
              <div class="item-container3">
                 <% @tasks.each do |task|%>
                <% if task.task_matrix = "重要でないかつ緊急でない"%>
                <div class="item" id="draggable" draggable="true">
                  <div class="task_title"><%= task.task_title %></div>
                  <span class="task_date"><%= "#{task.start_date}" + "ー" + "#{task.end_date}" %></span>
                  <span class="task_status"><%= task.task_status%></span>
                </div>
                <% end %>
              <% end %>
              </div>
            </div>
          </div>
          <!-----------重要でない x 緊急----------->
          <div class="matrix-box col-6">
            <div class="matrix-title">
              <p>重要でない x 緊急</p>
            </div>
            <div class="new-task-btn">
              <%= link_to "タスクを新規追加 ＋ ", new_task_path(matrix: "4"), remote: true, class: "btn btn-sm, btn-primary" %>
              <!--モーダル-->
              <div id="task-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
              <!---->
              <div class="item-container4">
                 <% @tasks.each do |task|%>
                <% if task.task_matrix = "重要でなく緊急"%>
                <div class="item" id="draggable" draggable="true">
                  <div class="task_title"><%= task.task_title %></div>
                  <span class="task_date"><%= "#{task.start_date}" + "ー" + "#{task.end_date}" %></span>
                  <span class="task_status"><%= task.task_status%></span>
                </div>
                <% end %>
              <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>