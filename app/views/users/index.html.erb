<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-10'>
      <h2 class="my-5">チームメンバー一覧</h2>
      <% @users.each do |user| %>
      <%= link_to tasks_path(user), class: "text-reset" do %>
      <div class="card my-1">
        <div class="card-body">
          <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class: "rounded-circle mx-3 my-3"%>
          <span>
            <%= user.full_name %>
            <% if user.position == "マネージャー" %>
              <span class="btn btn-outline-warning btn-sm">マネージャー</span>
            <% end %>
          </span>
          <br><span>タスク数 : <%#= %></span>
        </div>
      </div>
      <% end %>
      <% end %>
    </div>
  </div>
</div>