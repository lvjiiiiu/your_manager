<div class='daily-tasks container px-5'>
  <h4 class="my-5">My Daily Task</h4>
  <%= render 'layouts/error_messages', resource: @routine_task %>
  <div class='row'>
    <div class='col-8'>
      <%= render "routine", routine_tasks: @routine_tasks %>
      <div class="my-5">
        <%= form_with model: @routine_task, url: routines_path, local:true do |f| %>
          <%= f.text_field :routine_task_name %>
          <%= f.submit "Daily Taskを追加", class: "m-3 btn btn-secondary"%>
        <% end %>
      </div>
      <div>
        <%= link_to "タスク一覧へ戻る > ", tasks_path(user_id: current_user) %>
      </div>
    </div>
  </div>
</div>

