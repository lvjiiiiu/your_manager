<!--コメントに関わる通知-->
<% if notification.action == "comment" %>
<div class="card">
  <%= link_to notification_path(notification), class:"text-reset  text-decoration-none", remote: true do %>
  <div class="card-body">
    <div class="card-title">
      <span><%= attachment_image_tag notification.visitor, :profile_image, :fill, 35, 35, fallback: "user_missing.png", class: "rounded-circle mx-1 my-2"%></span>
      <% if notification.task.present? %>
      <% if notification.task.user == current_user %>
        <span><%= notification.visitor.name %></span>さんがあなたのタスクにコメントしました。
      <% else %>
        <span><%= notification.visitor.name  %></span>さんがあなたがコメントしたタスクへコメントしました。
      <% end %>
      <% end %>
      <span><%= " (#{time_ago_in_words(notification.created_at)} 前)" %></span>
    </div>
    <div  class="card-text">
     <p>"<%= notification.comment.comment %>"</p>
    </div>
  </div>
  <% end %>
</div>

<!---メンバーがチームにjoinしたときの通知--->
<% elsif notification.action == "group_join" %>

  <div class="card">
    <%= link_to group_path(id: notification.group_id), class:"text-reset  text-decoration-none" do %>
    <div class="card-body">
      <div class="card-title">
        <span><%= attachment_image_tag notification.visitor, :profile_image, :fill, 35, 35, fallback: "user_missing.png", class: "rounded-circle mx-1 my-2"%></span>
        <%= notification.visitor.name %>さんがTeam"<%= notification.group.group_name %>"に追加されました。
        <span><%= " (#{time_ago_in_words(notification.created_at)} 前)" %></span>
      </div>
    </div>
    <% end %>
  </div>

<!--メンバーが退会したときの通知-->
<% else %>
  <div class="card">
    <%= link_to group_path(id: notification.group_id), class:"text-reset  text-decoration-none" do %>
    <div class="card-body">
      <div class="card-title">
        <span><%= attachment_image_tag notification.visitor, :profile_image, :fill, 35, 35, fallback: "user_missing.png", class: "rounded-circle mx-1 my-2"%></span>
        <%= notification.visitor.name %>さんがTeam"<%= notification.group.group_name %>"を退会しました。
        <span><%= " (#{time_ago_in_words(notification.created_at)} 前)" %></span>
      </div>
    </div>
    <% end %>
  </div>
  <% end %>

