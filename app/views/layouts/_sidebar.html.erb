<div class="sidebar-content">

  <!--Profile表示部分-->
  <div class="profile-box">
    <div class="edit-link">
      <% if @user == current_user %>
        <%= link_to edit_user_path(current_user) do %>
          編集 <i class="fas fa-cog fa-lg" style="color: gray;"></i>
        <% end %>
      <% end %>
    </div>
    <div class="icon-name">
        <%= image_tag @user_image_url, size: "100x100", class: "mx-2 my-2 rounded-circle" %>

      <div class="my-name">
        <%= @user.name %>
      </div>
    </div>

    <div class="my-introduction">
      <span><%= @user.introduction %></span>
    </div>

  </div>

  <!--タスク数カウント表示-->
  <div class="matrix-task-count">
    <%= render "layouts/task_counter", user: @user %>
  </div>

  <!--routine表示-->
  <div class="sidebar-routines">
    <%= render "layouts/routine", routine_tasks: @routine_tasks, user: @user %>
  </div>
  <% if @user == current_user %>
  <div class="new-routine">
    <%= link_to "> Daily Taskを追加", routines_path(user_id: @user) %>
  </div>
  <% end %>

</div>